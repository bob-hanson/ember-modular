{{#column-filter class='facility-guidelines-column input-with-menu' padding='2,1,2,2'}}
  {{filter-bar triggerFilter=(action 'triggerFilterCollection') placeholderText='Quick Filter'}}
  {{icon-link tagName='div' fontType='add' linkPath=newAuditScopePath padding='1,0,0,1' class='filter-link'}}
{{/column-filter}}
{{#if hasCollection }}
  {{#component-container tagName='ul' class='listed-items'}}
    {{#each filteredCollection as |currentModel|}}
      {{listed-navigation-item currentItem=currentModel.id displayValue=currentModel.guidelineName linkPath=currentModel.facilityAdminGuidelineLinkPath isInternalNavOnly=true isActive=false }}
    {{/each}}
  {{/component-container}}
{{ else }}
  {{empty-message message=emptyCollectionMessage }}
{{/if}}
