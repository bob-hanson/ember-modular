{{#component-container percentageWidth=100}}
  {{#component-container class='form-row'}}
    {{hyspa-single-select labelText='Report Type' selectOptions=reportTypeOptions boundModel=reportType launchHelp="fac-admin-01" percentageWidth=50 }}
  {{/component-container }}

  {{hyspa-textarea-component labelText='Report Instructions(1/1000)' boundModel=reportInstructions }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Mark as Attorney Client Privilege' boundModel=isAttorneyClientPrivilege labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include Signature Page' boundModel=includeSignaturePage labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include Signature Page' boundModel=isDraftCopy labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include DRG Section' boundModel=includeDRGSection labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include DRG Description' boundModel=includeDRGDescription labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include DRG Reimbursement Amount' boundModel=includeDRGReimbursementAmount labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include ICD-10 CM Section' boundModel=includeICD10CMSection labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include ICD-10 CM Description' boundModel=includeICD10CMDescription labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include ICD-10 PCS Section' boundModel=includeICD10PCSSection labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include ICD-10 PCS Description' boundModel=includeICD10PCSDescription labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include ICD-10 CPT/HPCS Section' boundModel=includeICD10CPTHPCSSection labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include ICD-10 CPT/HPCS Description' boundModel=includeICD10CPTPCSDescription labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include Key Findings Section' boundModel=includeKeyFindingsSection labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Key Findings and Recommendations Page Break' boundModel=wantsKeyFindingsAndRecommendationsPageBreak labelLeft=false padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include Diagnosis to Procedure Mapping' boundModel=includeDiagnosisToProcedureMapping labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include Payer' boundModel=includePayer labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}

  {{#component-container class='form-row'}}
    {{switch-component switchLabel='Include Revenue Code' boundModel=includeRevenueCode labelLeft=false percentageWidth=40 padding='0,0,0,1' }}
  {{/component-container }}



  {{form-actions primaryButtonText=primaryButtonText primaryAction=(action 'triggerFormSubmit') cancelAction=this.attrs.formCancel primaryIsEnabled=true }}
  {{content-separator padding='0,0,0,0'}}
  {{pagination-link direction='left' linkPath=newAuditScopePath linkText="Previous: Scope of Audit" class="pull-left" }}
  {{pagination-link linkPath=newScoringMethodPath linkText="Next: Scoring Method" class="pull-right" }}
{{/component-container}}
