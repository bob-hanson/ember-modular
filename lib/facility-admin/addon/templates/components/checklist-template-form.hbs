{{#hyspa-form formFor="facility_checklist_templates" isLoading=isLoading isValid=isProjectFormValid formSubmitAction=(action 'triggerFormSubmit') formCancelAction=(action 'triggerFormCancel') as |f| }}
  {{section-header headerType='page' headerText=formHeaderText isFixed=true titleFont=true }}
  {{#component-container class='form-row'}}
    {{f.singleSelect labelText='Category' selectOptions=categoryOptions boundModel=facilityChecklistCategoryId isRequired=true name='facility_checklist_category_id' onChange=(action 'triggerCategoryChange') }}
  {{/component-container }}
  {{#component-container class='form-row'}}
    {{f.singleSelect labelText='Subcategory' selectOptions=subcategoryOptions boundModel=facilityChecklistSubCategoryId name='facility_checklist_sub_category_id'}}
  {{/component-container }}
  {{#component-container class="form-row" }}
    {{f.textarea boundModel=shortDescription labelText="Short Description" name="short_description" isRequired=true }}
  {{/component-container}}
  {{#component-container class="form-row" }} 
    {{f.textarea boundModel=longDescription labelText="Long Description" name="long_description" isRequired=true }} 
  {{/component-container}}
  {{#component-container class="form-row" }}
    {{f.buttonGroup radioOptions=commentTriggerOptions boundModel=commentTrigger labelText="Comment Trigger" name="comment_trigger" }}
  {{/component-container}}
  {{f.formActions primaryButtonText=primaryButtonText }}
{{/hyspa-form}}