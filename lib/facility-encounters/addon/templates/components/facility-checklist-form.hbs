{{#component-container}}

  {{#tabs-container vertical=true selectedIndex=selectedTabIndex }}
    {{#tabs-list class="tabs-top-spacer" }}
      {{#each checklistCategories as |checklistCategory| }}
        {{tab-button tabText=checklistCategory.categoryName }}
      {{/each}}
    {{/tabs-list}}

    {{#each checklistCategories as |checklistCategory| }}

      {{#tab-panel padding='0,0,2,0' }}
        {{#component-container class="form-row horizontal" }}

          {{#component-container padding="0,0,0,2" }}
            {{#table-layout class="column-100" }}

              {{#each checklistCategory.facilityChecklistTemplates as |checklistTemplate| }}
                {{#table-layout-row }}
                  {{#table-layout-cell class="valign-middle table-layout-row-header column-60" padding="0,1,1,2" }}
                    {{checklistTemplate.shortDescription}}
                  {{/table-layout-cell}}
                  {{#table-layout-cell class="valign-middle" padding="0,0,1,0" }}
                    {{checklist-response-button-group currentChecklistResponses=currentChecklistResponses checklistTemplate=checklistTemplate }}
                  {{/table-layout-cell}}
                {{/table-layout-row}}
              {{/each}}

            {{/table-layout}}

            {{content-separator }}

            {{basic-button buttonText="Mark all others N/A" class="pull-right" percentageWidth=50 clickAction=(action 'triggerSetToNA' checklistCategory) }}
          {{/component-container}}

          {{content-separator padding="2,0,1,0" }}

          {{audit-box-reset-clear-buttons isSection=true clearAction=(action 'triggerClearCategory' checklistCategory ) clearOnly=true padding="0,0,0,2" }}

        {{/component-container}}
      {{/tab-panel}}

    {{/each}}

  {{/tabs-container}}

  {{audit-box-section-bottom-bar clearAllAction=(action 'triggerClearAllCategories') clearOnly=true nextPath=codesPath nextPathText="Next: Diagnosis and Procedure Codes" padding='0,0,2,0' }}
{{/component-container}}
