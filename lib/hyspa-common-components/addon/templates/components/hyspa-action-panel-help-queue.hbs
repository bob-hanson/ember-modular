{{#component-container padding="3,0,0,0" }}
  {{#each helpQueue as |helpObject| }}
    {{#component-container class="help-queue-item" padding="0,2,0,3" }}
      {{#component-container class="help-queue-item-body" }}
        {{{helpObject.message}}}
      {{/component-container}}
      {{icon-font fontType="clear" class="close-help-queue-item" clickAction=(action 'triggerRemoveFromQueue' helpObject) }}
      {{content-separator padding="1,0,2,0" }}
    {{/component-container}}
  {{/each}}
{{/component-container}}