{{#if userAuditState.isViewingProvidersFull }}
  {{listed-providers-table currentProviders=currentProviders }}
{{ else }}
  {{#column-filter}}
    {{filter-bar triggerFilter=(action 'triggerFilterCollection') placeholderText='Quick Filter'}}
  {{/column-filter}}
  {{#if hasProjects }}
    <ul class='listed-items column-100'>
      {{#each filteredProjects as |currentProject|}}
        {{listed-provider currentProject=currentProject }}
      {{/each}}
    </ul>
  {{ else }}
    {{empty-message message=emptyCollectionMessage }}
  {{/if}}
{{/if}}
