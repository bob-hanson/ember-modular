{{#light-table table height='56vh' as |t|}}

  {{t.head
    fixed=true
    iconSortable='sort-icon'
    iconAscending='sort-icon sort-ascending'
    iconDescending='sort-icon sort-descending' }}

  {{#t.body onRowClick=(action 'triggerRowClick') as |body|}}

    {{#if isLoading }}
      {{#body.loader}}
        {{loading-element }}
      {{/body.loader}}
    {{/if}}

    {{#if currentTable.isEmpty }}
      {{#body.no-data}}
        {{empty-message message=emptyMessage }}
      {{/body.no-data}}
    {{/if}}
  {{/t.body}}

{{/light-table}}
