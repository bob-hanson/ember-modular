            buttonLabel=placeholderText
            multiple=isMultiple
            selectedFiles=selectedFiles
            resetInputTrigger=resetInputTrigger
            validFileExtensions=validFileExtensions
            fileDroppedAction=(action 'triggerFileDrop')
            triggerInputChange=(action 'triggerInputChange')
            percentageWidth=40 }}

