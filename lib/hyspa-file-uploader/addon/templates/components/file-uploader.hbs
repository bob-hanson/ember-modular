{{#if isMultiple }}
  {{#if hasFilesAvailableForUpload }}
    {{#each selectedFilesForUpload as |uploadedFile| }}
      {{#component-container class='file-for-upload' percentageWidth=60 }}
        {{data-point value=uploadedFile.resourceName clickAction=(action 'triggerRemoveFileFromUploadArray') actionModel=uploadedFile percentageWidth='60'}}
      {{/component-container}}
    {{/each}}
  {{/if}}
